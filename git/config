[core]
	pager = "diff-so-fancy | less --tabs=4 -RFX"

[alias]
	ai = add -i
	b = branch
	ca = commit --amend
	ci = commit
	co = checkout
	cob = checkout -b
	lg = log --color --graph --oneline --abbrev-commit
	pr = pull-request
	rci = commit --amend --reuse-message HEAD
	squash = rebase -i @{u}
	st = status -sb
	todo = grep -Ee '\\bTODO:?\\b'
	fixme = grep -Ee '\\bFIX(ME)?:?\\b'
	com = checkout master
	fixup = commit --fixup=HEAD
	ag = grep
	rg = grep
	ver = tag --sort=version:refname

[mergetool]
	keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -d
[merge]
	tool = fugitive

[branch]
	autoSetupRebase = always
[push]
	default = simple
[pull]
	ff = only
[merge]
	ff = false
[rebase]
	autostash = true
	autosquash = true
[credential]
	helper = cache --timeout=3600
[fetch]
	prune = true
[help]
	autocorrect = 5

# Automatically sign all tags and commits
[tag]
	forceSignAnnotated = true
[commit]
	gpgsign = true
	verbose = true

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[rerere]
	enabled = true

# vim: ft=gitconfig noexpandtab
