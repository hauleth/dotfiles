[core]
	pager = "/usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less --tabs=4 -RFX"
	commitGraph = true
[gc]
	writeCommitGraph = true
[alias]
	ai = add -i
	b = branch
	ca = commit --amend
	ci = commit
	co = checkout
	cob = checkout -b
	lg = log --color --graph --oneline --abbrev-commit
	pr = pull-request
	rci = commit --amend --reuse-message HEAD
	squash = rebase -i @{u}
	st = status -sb
	todo = grep -Ee '\\bTODO:?\\b'
	fixme = grep -Ee '\\bFIX(ME)?:?\\b'
	com = checkout master
	ag = grep
	rg = grep
	ver = tag --sort=version:refname
	skip = update-index --skip-worktree
	unskip = update-index --no-skip-worktree
	publish = push -u hauleth

[mergetool]
	keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -d
[merge]
	tool = fugitive

[branch]
	autoSetupRebase = always
[push]
	default = simple
[pull]
	ff = only
[merge]
	ff = false
[rebase]
	autostash = true
	autosquash = true
[credential]
	helper = cache --timeout=3600
[fetch]
	prune = true
[help]
	autocorrect = 5

# Automatically sign all tags and commits
[tag]
	forceSignAnnotated = true
[commit]
	gpgsign = true
	verbose = true

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[rerere]
	enabled = true

[diff]
	suppressBlankEmpty = true
	indentHeuristic = true
	algorithm = histogram
	mnemonicPrefix = true

[color.diff]
	old = blue
	new = yellow

# vim: ft=gitconfig noexpandtab
