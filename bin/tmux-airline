#!/bin/sh

SEP=
SEPE=

CLOCK=⌚
CALENDAR=☼
MUSIC=♫

WIDTH="${1}"

SMALL=80
MEDIUM=140

if [ "$WIDTH" -gt "$MEDIUM" ]; then
  if type mpc >/dev/null; then
    MPD="#[fg=colour252,bg=default,nobold,noitalics,nounderscore]$SEP#[fg=colour16,bg=colour252,bold,noitalics,nounderscore] $MUSIC $(mpc current)"
    date_colour='colour252'
  fi
fi

if [ "$WIDTH" -ge "$SMALL" ]; then
  UNAME="#[fg=colour21,bg=colour18,nobold,noitalics,nounderscore]$SEP#[fg=colour18,bg=colour21,bold,noitalics,nounderscore] $(uname -n)"
fi

DATE="#[fg=colour18,bg=${date_colour:-default},nobold,noitalics,nounderscore]$SEP#[fg=colour20,bg=colour18,nobold,noitalics,nounderscore] $CALENDAR $(date +'%d.%m.%y')"
TIME="#[fg=colour19,bg=colour18,nobold,noitalics,nounderscore]$SEPE#[fg=colour20,bg=colour18,bold,noitalics,nounderscore] $CLOCK $(date +'%H:%M')"

echo "$MPD $DATE $TIME $UNAME " | sed 's/ *$/ /g'
